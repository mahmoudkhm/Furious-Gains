<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" style="-fx-background-color: black; -fx-padding: 20px;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.Controllers.PaymentController">

    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: black; -fx-underline: true;" text="Payment Details" />

    <HBox alignment="CENTER" spacing="10">
        <Label style="-fx-font-weight: bold;" text="Montant" textFill="#f2efef" />
        <TextField fx:id="amountField" promptText="Taper le montant" style="-fx-pref-width: 150px;" />
    </HBox>
    <HBox alignment="CENTER" spacing="10">
        <Label style="-fx-font-weight: bold;" text="USD" textFill="#ece6e6" />
        <TextField fx:id="currencyField" promptText="USD" style="-fx-pref-width: 150px;" />
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Label style="-fx-font-weight: bold;" text="Numéro de la carte" textFill="#fff5f5" />
        <TextField fx:id="cardNumberField" promptText="Taper le numéro de la carte" style="-fx-pref-width: 250px;" />
    </HBox>

    <Button onAction="#processPayment" style="-fx-font-size: 16px; -fx-padding: 8px 16px; -fx-background-color: black; -fx-text-fill: white; -fx-border-radius: 5px;" text="Pay" />
</VBox>
